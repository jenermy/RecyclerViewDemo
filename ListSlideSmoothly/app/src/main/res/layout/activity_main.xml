<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.example.listslidesmoothly.CustomVideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/videoBackgroundVV"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/placeHolderLayout"
        android:background="@drawable/junjie"/>
    <!--<android.support.v4.widget.NestedScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeRefreshLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ViewSwitcher
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inAnimation="@anim/in_animation"
                android:outAnimation="@anim/out_animation"
                android:persistentDrawingCache="animation"
                android:id="@+id/refreshPlaceHolder"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="正在刷新"
                    android:id="@+id/refreshTv"/>
            </ViewSwitcher>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerList"/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <!--</android.support.v4.widget.NestedScrollView>-->

</RelativeLayout>
